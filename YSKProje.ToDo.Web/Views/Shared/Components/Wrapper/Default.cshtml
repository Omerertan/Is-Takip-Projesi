@model AppUserListDto

@{ string active = string.Empty;
    if (TempData["Active"] != null)
    {
        active = TempData["Active"].ToString();
    } }

<div class="border-right" id="sidebar-wrapper">
    <div class="sidebar-heading text-center">
        <img src="~/img/@Model.Picture" alt="@Model.Name" style="height:7rem!important" class="d-inline-block rounded align-top " />
    </div>
    <div class="list-group list-group-flush">
        <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action @(active == "anasayfa"?"active":"")  "> <i class="fas fa-home mr-2"></i>Anasayfa</a>
        <a asp-controller="Gorev" asp-action="Index" class="list-group-item list-group-item-action @(active == "gorev"?"active":"")"> <i class="fas fa-tasks mr-2"></i> Görev İşlemleri</a>
        <a asp-controller="Aciliyet" asp-action="Index" class="list-group-item list-group-item-action @(active == "aciliyet"?"active":"")"> <i class="fas fa-exclamation mr-2"></i> Aciliyet İşlemleri</a>
        <a asp-controller="IsEmri" asp-action="Index" class="list-group-item list-group-item-action @(active == "isemri"?"active":"") "> <i class="far fa-file mr-2"></i> İş Emirleri</a>
        <a asp-controller="Grafik" asp-action="Index" class="list-group-item list-group-item-action @(active == "grafik"?"active":"") "> <i class="fas fa-chart-pie mr-2"></i> Grafikler</a>
        <a asp-controller="Bildirim" asp-action="Index" class="list-group-item list-group-item-action position-relative @(active == "bildirim"?"active":"") ">
            <i class="fas fa-bell mr-2"></i>
            @if (ViewBag.BildirimSayisi > 0)
            {
    <sub class="badge badge-pill badge-danger position-absolute " style="bottom: 0.625rem!important; left: 1.7rem!important;">@ViewBag.BildirimSayisi</sub>            }

            Bildirimler
        </a>
        <a asp-controller="Profil" asp-action="Index" class="list-group-item list-group-item-action @(active == "profil"?"active":"") "> <i class="fas fa-user mr-2"></i> Profilim</a>
        <a asp-area="" asp-action="CikisYap" asp-controller="Home" class="list-group-item list-group-item-action "> <i class="fas fa-sign-out-alt mr-2"></i> Çıkış Yap</a>
    </div>
</div>