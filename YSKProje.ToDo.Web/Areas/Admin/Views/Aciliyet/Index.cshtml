@model List<AciliyetListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@if (Model.Count != 0)
{
<a asp-controller="Aciliyet" asp-action="EkleAciliyet" class="btn btn-sm btn-dark my-2"> <i class="fas fa-plus mr-1"></i> Yeni Aciliyet</a>

    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Tanim</th>
                <th>İşlem</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tanim</td>
                    <td>
                        <a asp-controller="Aciliyet" asp-action="GuncelleAciliyet" asp-route-id="@item.Id" class="btn btn-sm btn-warning"> <i class="fas fa-edit mr-1"></i> Düzenle</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="text-center  mt-4">
        <p class="lead">Sistemde kayıtlı aciliyet durumu bulunamadı</p>
        <a asp-controller="Aciliyet" asp-action="EkleAciliyet" class="btn btn-sm btn-info my-2">Yeni Aciliyet Ekle</a>
    </div>
}

